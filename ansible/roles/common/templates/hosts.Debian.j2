127.0.0.1 localhost
127.0.1.1 {{ ansible_hostname }}

# The following lines are desirable for IPv6 capable hosts
::1     localhost ip6-localhost ip6-loopback
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters

# unix servers
{% for item in groups['unix'] %}
{% for ipaddr in hostvars[item]['ansible_all_ipv4_addresses'] %}
{%- if ipaddr.startswith('172.31.70') %}
{{ ipaddr }} {{ item }}
{% endif %}
{% endfor %}
{% endfor %}

# windows servers
{% for item in groups['windows'] %}
{% for ipaddr in hostvars[item]['ansible_ip_addresses'] %}
{%- if ipaddr.startswith('172.31.70') %}
{{ ipaddr }} {{ item }}
{% endif %}
{% endfor %}
{% endfor %}

# gateway (host)
{{ hostvars[ansible_hostname]['ansible_default_ipv4']['gateway'] }} gateway
