[Unit]
Description=Buildbot Master
Wants=network.target
After=network.target

[Service]
Type=forking
PIDFile=/home/{{ buildbot_username }}/twistd.pid
WorkingDirectory=/home/{{ buildbot_username }}
ExecStart=/home/{{ buildbot_username }}/bin/buildbot start
ExecReload=/home/{{ buildbot_username }}/bin/buildbot reconfig
ExecStop=/home/{{ buildbot_username }}/bin/buildbot stop
Restart=always
User={{ buildbot_username }}

[Install]
WantedBy=multi-user.target
